<style>
    * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
    }
    
    body {
        background: #000;
        color: white;
        font-family: 'Courier New', Courier, monospace;
    }
    
    nav {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 1em;
        width: 100%;
        background: #292929;
        position: fixed;
        height: 10vh;
        top: 0px;
    }
    
    .pageTitle {
        display: block;
        width: fit-content;
        font-size: 30px;
        font-weight: bold;
    }
    
    .button {
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        font-weight: bold;
        text-transform: uppercase;
    }
    
    .info {
        padding: 5em 2em;
        background: rgb(36, 36, 36);
        text-align: center;
        margin-top: 10vh;
        height: 90vh;
    }
    
    .info>h2 {
        margin-top: 1em;
    }
    
    .profilePic {
        display: inline-block;
        width: 150px;
        height: 150px;
        border-radius: 150px;
        background-color: #2196f3;
    }
    
    .logoutBtn {
        color: white;
        background-color: #f44336;
    }
</style>

<body>
    <nav>

        <span class="pageTitle"> Profile Page</span>
        <form action="/logout?_method=DELETE" method="POST">
            <button class="button logoutBtn" type="submit">Logout</button>
        </form>
    </nav>
    <div class="info">

        <div class="profilePic">

        </div>
        <h2>
            Name :
            <%= name %>

        </h2>

        <h2>
            Email :
            <%= email %>
        </h2>

    </div>


</body>